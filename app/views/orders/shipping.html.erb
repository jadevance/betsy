<%= form_tag(order_placed_path, method: :patch) do %>


  <% @response.ups_rates.each do |rate| %>
    <%= radio_button_tag(:rate, rate[1]) %>
    <%= label_tag(:shipping_type, "UPS: #{rate[0]} #{rate[1]}") %>
  <% end %>

  <% @response.usps_rates.each do |rate| %>
    <%= radio_button_tag(:rate, rate[1]) %>
    <%= label_tag(:shipping_type, "USPS: #{rate[0]} #{rate[1]}") %>
  <% end %>

  <% @response.fedex_rates.each do |rate| %>
    <%= radio_button_tag(:rate, rate[1]) %>
    <%= label_tag(:shipping_type, "FedEx: #{rate[0]} #{rate[1]}") %>
  <% end %>

  <%= submit_tag "Select Shipping" %>
<% end %>




